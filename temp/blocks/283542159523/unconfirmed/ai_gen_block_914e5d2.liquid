{% doc %}
  @prompt
    create me a section where i can showcase a product with with a depth shadow effect to create a 3D effect. of the product image  , the is not how i want. i wanted like the product is in without baackground on the top part and below that there is a background with product details and price 
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-product-3d-showcase-{{ ai_gen_id }} {
    padding: {{ block.settings.section_padding }}px 20px;
    background-color: {{ block.settings.outer_background }};
  }

  .ai-product-3d-container-{{ ai_gen_id }} {
    max-width: {{ block.settings.max_width }}px;
    margin: 0 auto;
  }

  .ai-product-3d-image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    max-width: {{ block.settings.image_max_width }}px;
    margin: 0 auto {{ block.settings.image_bottom_offset }}px;
    z-index: 2;
  }

  .ai-product-3d-image-container-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    overflow: visible;
    transform: translateZ(0);
  }

  .ai-product-3d-image-{{ ai_gen_id }} {
    width: 100%;
    height: auto;
    display: block;
    position: relative;
    z-index: 2;
  }

  .ai-product-3d-image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    aspect-ratio: 1 / 1;
    background-color: transparent;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-product-3d-image-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-product-3d-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 12px 20px;
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

  .ai-product-3d-shadow-layer-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
  }

  .ai-product-3d-shadow-1-{{ ai_gen_id }} {
    background-color: {{ block.settings.shadow_color }};
    opacity: {{ block.settings.shadow_opacity }};
    transform: translate({{ block.settings.shadow_offset_x }}px, {{ block.settings.shadow_offset_y }}px);
    z-index: 1;
  }

  .ai-product-3d-shadow-2-{{ ai_gen_id }} {
    background-color: {{ block.settings.shadow_color }};
    opacity: calc({{ block.settings.shadow_opacity }} * 0.6);
    transform: translate(calc({{ block.settings.shadow_offset_x }}px * 1.5), calc({{ block.settings.shadow_offset_y }}px * 1.5));
    z-index: 0;
  }

  .ai-product-3d-shadow-3-{{ ai_gen_id }} {
    background-color: {{ block.settings.shadow_color }};
    opacity: calc({{ block.settings.shadow_opacity }} * 0.3);
    transform: translate(calc({{ block.settings.shadow_offset_x }}px * 2), calc({{ block.settings.shadow_offset_y }}px * 2));
    z-index: -1;
  }

  .ai-product-3d-content-card-{{ ai_gen_id }} {
    background-color: {{ block.settings.card_background }};
    border-radius: {{ block.settings.card_border_radius }}px;
    padding: {{ block.settings.card_padding }}px;
    text-align: center;
    position: relative;
    z-index: 1;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
  }

  .ai-product-3d-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    color: {{ block.settings.title_color }};
    margin: 0 0 12px;
    font-weight: 700;
  }

  .ai-product-3d-description-{{ ai_gen_id }} {
    font-size: {{ block.settings.description_size }}px;
    color: {{ block.settings.description_color }};
    line-height: 1.6;
    margin: 0 0 20px;
  }

  .ai-product-3d-price-{{ ai_gen_id }} {
    font-size: {{ block.settings.price_size }}px;
    color: {{ block.settings.price_color }};
    font-weight: 600;
    margin: 0 0 24px;
  }

  .ai-product-3d-button-{{ ai_gen_id }} {
    display: inline-block;
    padding: 14px 32px;
    background-color: {{ block.settings.button_background }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: {{ block.settings.button_text_size }}px;
    font-weight: 600;
    transition: all 0.3s ease;
    border: none;
    cursor: pointer;
  }

  .ai-product-3d-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_background }};
    color: {{ block.settings.button_hover_text_color }};
    transform: translateY(-2px);
  }

  @media screen and (max-width: 749px) {
    .ai-product-3d-title-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.title_size }}px * 0.8);
    }

    .ai-product-3d-description-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.description_size }}px * 0.9);
    }

    .ai-product-3d-price-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.price_size }}px * 0.9);
    }

    .ai-product-3d-content-card-{{ ai_gen_id }} {
      padding: calc({{ block.settings.card_padding }}px * 0.7);
    }
  }
{% endstyle %}

<div class="ai-product-3d-showcase-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-product-3d-container-{{ ai_gen_id }}">
    <div class="ai-product-3d-image-wrapper-{{ ai_gen_id }}">
      <div class="ai-product-3d-image-container-{{ ai_gen_id }}">
        <div class="ai-product-3d-shadow-layer-{{ ai_gen_id }} ai-product-3d-shadow-3-{{ ai_gen_id }}"></div>
        <div class="ai-product-3d-shadow-layer-{{ ai_gen_id }} ai-product-3d-shadow-2-{{ ai_gen_id }}"></div>
        <div class="ai-product-3d-shadow-layer-{{ ai_gen_id }} ai-product-3d-shadow-1-{{ ai_gen_id }}"></div>
        
        {% if block.settings.product_image %}
          <img
            src="{{ block.settings.product_image | image_url: width: 1200 }}"
            alt="{{ block.settings.product_image.alt | escape }}"
            loading="lazy"
            width="{{ block.settings.product_image.width }}"
            height="{{ block.settings.product_image.height }}"
            class="ai-product-3d-image-{{ ai_gen_id }}"
          >
        {% elsif block.settings.product %}
          <img
            src="{{ block.settings.product.featured_image | image_url: width: 1200 }}"
            alt="{{ block.settings.product.featured_image.alt | escape }}"
            loading="lazy"
            width="{{ block.settings.product.featured_image.width }}"
            height="{{ block.settings.product.featured_image.height }}"
            class="ai-product-3d-image-{{ ai_gen_id }}"
          >
        {% else %}
          <div class="ai-product-3d-image-placeholder-{{ ai_gen_id }}">
            {{ 'product-1' | placeholder_svg_tag }}
            <div class="ai-product-3d-empty-state-{{ ai_gen_id }}">
              Add a product or image to get started
            </div>
          </div>
        {% endif %}
      </div>
    </div>

    <div class="ai-product-3d-content-card-{{ ai_gen_id }}">
      {% if block.settings.title != blank %}
        <h2 class="ai-product-3d-title-{{ ai_gen_id }}">{{ block.settings.title }}</h2>
      {% elsif block.settings.product %}
        <h2 class="ai-product-3d-title-{{ ai_gen_id }}">{{ block.settings.product.title }}</h2>
      {% endif %}

      {% if block.settings.description != blank %}
        <div class="ai-product-3d-description-{{ ai_gen_id }}">{{ block.settings.description }}</div>
      {% elsif block.settings.product %}
        <div class="ai-product-3d-description-{{ ai_gen_id }}">{{ block.settings.product.description | strip_html | truncate: 200 }}</div>
      {% endif %}

      {% if block.settings.show_price %}
        {% if block.settings.product %}
          <div class="ai-product-3d-price-{{ ai_gen_id }}">{{ block.settings.product.price | money }}</div>
        {% endif %}
      {% endif %}

      {% if block.settings.button_text != blank %}
        <a
          href="{% if block.settings.button_link != blank %}{{ block.settings.button_link }}{% elsif block.settings.product %}{{ block.settings.product.url }}{% else %}#{% endif %}"
          class="ai-product-3d-button-{{ ai_gen_id }}"
        >
          {{ block.settings.button_text }}
        </a>
      {% endif %}
    </div>
  </div>
</div>

