{% doc %}
  @prompt
    generate a modern shop the look section for me which should be fit in both mobile and desktop. also the text should have animation and UI should be translucent glass morphism UI.
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-shop-look-{{ ai_gen_id }} {
    position: relative;
    padding: 60px 20px;
    overflow: hidden;
  }

  .ai-shop-look-container-{{ ai_gen_id }} {
    max-width: 1400px;
    margin: 0 auto;
  }

  .ai-shop-look-header-{{ ai_gen_id }} {
    text-align: center;
    margin-bottom: 50px;
  }

  .ai-shop-look-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    color: {{ block.settings.title_color }};
    margin: 0 0 15px;
    opacity: 0;
    animation: ai-shop-look-fade-in-up-{{ ai_gen_id }} 0.8s ease forwards;
  }

  .ai-shop-look-subtitle-{{ ai_gen_id }} {
    font-size: {{ block.settings.subtitle_size }}px;
    color: {{ block.settings.subtitle_color }};
    margin: 0;
    opacity: 0;
    animation: ai-shop-look-fade-in-up-{{ ai_gen_id }} 0.8s ease 0.2s forwards;
  }

  @keyframes ai-shop-look-fade-in-up-{{ ai_gen_id }} {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .ai-shop-look-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 25px;
  }

  .ai-shop-look-item-{{ ai_gen_id }} {
    position: relative;
    border-radius: {{ block.settings.card_border_radius }}px;
    overflow: hidden;
    opacity: 0;
    animation: ai-shop-look-fade-in-{{ ai_gen_id }} 0.6s ease forwards;
  }

  .ai-shop-look-item-{{ ai_gen_id }}:nth-child(1) {
    animation-delay: 0.1s;
  }

  .ai-shop-look-item-{{ ai_gen_id }}:nth-child(2) {
    animation-delay: 0.2s;
  }

  .ai-shop-look-item-{{ ai_gen_id }}:nth-child(3) {
    animation-delay: 0.3s;
  }

  .ai-shop-look-item-{{ ai_gen_id }}:nth-child(4) {
    animation-delay: 0.4s;
  }

  @keyframes ai-shop-look-fade-in-{{ ai_gen_id }} {
    from {
      opacity: 0;
      transform: scale(0.95);
    }
    to {
      opacity: 1;
      transform: scale(1);
    }
  }

  .ai-shop-look-image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    padding-bottom: 125%;
    overflow: hidden;
  }

  .ai-shop-look-image-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.6s ease;
  }

  .ai-shop-look-item-{{ ai_gen_id }}:hover .ai-shop-look-image-{{ ai_gen_id }} {
    transform: scale(1.05);
  }

  .ai-shop-look-placeholder-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, #f5f5f5 0%, #e0e0e0 100%);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-shop-look-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-shop-look-glass-overlay-{{ ai_gen_id }} {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    padding: 25px 20px;
    background: {{ block.settings.glass_bg_color }};
    backdrop-filter: blur({{ block.settings.glass_blur }}px);
    -webkit-backdrop-filter: blur({{ block.settings.glass_blur }}px);
    border-top: 1px solid rgba(255, 255, 255, {{ block.settings.glass_border_opacity }});
    transform: translateY(100%);
    transition: transform 0.4s ease;
  }

  .ai-shop-look-item-{{ ai_gen_id }}:hover .ai-shop-look-glass-overlay-{{ ai_gen_id }} {
    transform: translateY(0);
  }

  .ai-shop-look-product-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.product_title_size }}px;
    color: {{ block.settings.glass_text_color }};
    margin: 0 0 8px;
    font-weight: 600;
    line-height: 1.3;
  }

  .ai-shop-look-product-price-{{ ai_gen_id }} {
    font-size: {{ block.settings.product_price_size }}px;
    color: {{ block.settings.glass_text_color }};
    margin: 0 0 15px;
    font-weight: 500;
  }

  .ai-shop-look-button-{{ ai_gen_id }} {
    display: inline-block;
    padding: 12px 28px;
    background-color: {{ block.settings.button_bg_color }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: 14px;
    font-weight: 600;
    transition: all 0.3s ease;
    border: none;
    cursor: pointer;
  }

  .ai-shop-look-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_bg_color }};
    transform: translateY(-2px);
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
  }

  .ai-shop-look-empty-state-{{ ai_gen_id }} {
    text-align: center;
    padding: 40px 20px;
    color: #999;
    font-size: 14px;
  }

  @media screen and (max-width: 749px) {
    .ai-shop-look-{{ ai_gen_id }} {
      padding: 40px 15px;
    }

    .ai-shop-look-header-{{ ai_gen_id }} {
      margin-bottom: 30px;
    }

    .ai-shop-look-title-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.title_size }}px * 0.7);
    }

    .ai-shop-look-subtitle-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.subtitle_size }}px * 0.85);
    }

    .ai-shop-look-grid-{{ ai_gen_id }} {
      grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
      gap: 15px;
    }

    .ai-shop-look-glass-overlay-{{ ai_gen_id }} {
      padding: 15px;
      transform: translateY(0);
    }

    .ai-shop-look-product-title-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.product_title_size }}px * 0.85);
    }

    .ai-shop-look-product-price-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.product_price_size }}px * 0.85);
    }

    .ai-shop-look-button-{{ ai_gen_id }} {
      padding: 10px 20px;
      font-size: 13px;
    }
  }

  @media screen and (min-width: 750px) and (max-width: 989px) {
    .ai-shop-look-grid-{{ ai_gen_id }} {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media screen and (min-width: 990px) {
    .ai-shop-look-grid-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.products_per_row }}, 1fr);
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .ai-shop-look-title-{{ ai_gen_id }},
    .ai-shop-look-subtitle-{{ ai_gen_id }},
    .ai-shop-look-item-{{ ai_gen_id }} {
      animation: none;
      opacity: 1;
    }

    .ai-shop-look-item-{{ ai_gen_id }}:hover .ai-shop-look-image-{{ ai_gen_id }} {
      transform: none;
    }
  }
{% endstyle %}

<div class="ai-shop-look-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-shop-look-container-{{ ai_gen_id }}">
    <div class="ai-shop-look-header-{{ ai_gen_id }}">
      {% if block.settings.title != blank %}
        <h2 class="ai-shop-look-title-{{ ai_gen_id }}">{{ block.settings.title }}</h2>
      {% endif %}
      {% if block.settings.subtitle != blank %}
        <p class="ai-shop-look-subtitle-{{ ai_gen_id }}">{{ block.settings.subtitle }}</p>
      {% endif %}
    </div>

    {% assign has_products = false %}
    {% for i in (1..4) %}
      {% assign product_key = 'product_' | append: i %}
      {% if block.settings[product_key] != blank %}
        {% assign has_products = true %}
        {% break %}
      {% endif %}
    {% endfor %}

    {% if has_products %}
      <div class="ai-shop-look-grid-{{ ai_gen_id }}">
        {% for i in (1..4) %}
          {% assign product_key = 'product_' | append: i %}
          {% assign product = block.settings[product_key] %}
          
          {% if product != blank %}
            <div class="ai-shop-look-item-{{ ai_gen_id }}">
              <div class="ai-shop-look-image-wrapper-{{ ai_gen_id }}">
                {% if product.featured_image %}
                  <img
                    src="{{ product.featured_image | image_url: width: 600 }}"
                    alt="{{ product.featured_image.alt | escape }}"
                    class="ai-shop-look-image-{{ ai_gen_id }}"
                    loading="lazy"
                    width="600"
                    height="750"
                  >
                {% else %}
                  <div class="ai-shop-look-placeholder-{{ ai_gen_id }}">
                    {{ 'product-1' | placeholder_svg_tag }}
                  </div>
                {% endif %}

                <div class="ai-shop-look-glass-overlay-{{ ai_gen_id }}">
                  <h3 class="ai-shop-look-product-title-{{ ai_gen_id }}">{{ product.title }}</h3>
                  <div class="ai-shop-look-product-price-{{ ai_gen_id }}">
                    {{ product.price | money }}
                  </div>
                  <a href="{{ product.url }}" class="ai-shop-look-button-{{ ai_gen_id }}">
                    {{ block.settings.button_text }}
                  </a>
                </div>
              </div>
            </div>
          {% endif %}
        {% endfor %}
      </div>
    {% else %}
      <div class="ai-shop-look-empty-state-{{ ai_gen_id }}">
        Select products to showcase your look
      </div>
    {% endif %}
  </div>
</div>

