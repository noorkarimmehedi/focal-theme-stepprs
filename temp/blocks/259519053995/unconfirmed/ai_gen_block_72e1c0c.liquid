    build a featured collection section where there is a visible black squared box and on mobile version there shouldn't be any gap on left and right side same in desktop version too. everyhting should be customizable from font to size to raidius to color 
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-featured-collection-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    padding: 0;
    margin: 0;
  }

  .ai-featured-collection__container-{{ ai_gen_id }} {
    background-color: {{ block.settings.box_background_color }};
    border: {{ block.settings.box_border_width }}px solid {{ block.settings.box_border_color }};
    border-radius: {{ block.settings.box_border_radius }}px;
    padding: {{ block.settings.box_padding }}px;
    width: 100%;
    box-sizing: border-box;
  }

  .ai-featured-collection__header-{{ ai_gen_id }} {
    text-align: {{ block.settings.text_alignment }};
    margin-bottom: {{ block.settings.header_spacing }}px;
  }

  .ai-featured-collection__title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_font_size }}px;
    color: {{ block.settings.title_color }};
    margin: 0 0 {{ block.settings.title_spacing }}px 0;
    font-weight: {{ block.settings.title_font_weight }};
    text-transform: {{ block.settings.title_text_transform }};
  }

  .ai-featured-collection__description-{{ ai_gen_id }} {
    font-size: {{ block.settings.description_font_size }}px;
    color: {{ block.settings.description_color }};
    margin: 0;
    line-height: 1.5;
  }

  .ai-featured-collection__products-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat({{ block.settings.products_per_row_desktop }}, 1fr);
    gap: {{ block.settings.product_gap }}px;
    margin-bottom: {{ block.settings.button_spacing }}px;
  }

  .ai-featured-collection__product-{{ ai_gen_id }} {
    background-color: {{ block.settings.product_card_background }};
    border: {{ block.settings.product_card_border_width }}px solid {{ block.settings.product_card_border_color }};
    border-radius: {{ block.settings.product_card_border_radius }}px;
    padding: {{ block.settings.product_card_padding }}px;
    text-align: center;
    transition: transform 0.3s ease;
  }

  .ai-featured-collection__product-{{ ai_gen_id }}:hover {
    transform: translateY(-{{ block.settings.product_hover_lift }}px);
  }

  .ai-featured-collection__product-image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    margin-bottom: {{ block.settings.image_spacing }}px;
    border-radius: {{ block.settings.product_image_border_radius }}px;
    overflow: hidden;
  }

  .ai-featured-collection__product-image-{{ ai_gen_id }} {
    width: 100%;
    height: auto;
    display: block;
    border-radius: {{ block.settings.product_image_border_radius }}px;
  }

  .ai-featured-collection__product-image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    aspect-ratio: 1 / 1;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: {{ block.settings.product_image_border_radius }}px;
  }

  .ai-featured-collection__product-image-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
  }

  .ai-featured-collection__product-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.product_title_font_size }}px;
    color: {{ block.settings.product_title_color }};
    margin: 0 0 {{ block.settings.product_title_spacing }}px 0;
    font-weight: {{ block.settings.product_title_font_weight }};
  }

  .ai-featured-collection__product-title-link-{{ ai_gen_id }} {
    color: inherit;
    text-decoration: none;
  }

  .ai-featured-collection__product-title-link-{{ ai_gen_id }}:hover {
    color: {{ block.settings.product_title_hover_color }};
  }

  .ai-featured-collection__product-price-{{ ai_gen_id }} {
    font-size: {{ block.settings.product_price_font_size }}px;
    color: {{ block.settings.product_price_color }};
    font-weight: {{ block.settings.product_price_font_weight }};
  }

  .ai-featured-collection__button-wrapper-{{ ai_gen_id }} {
    text-align: {{ block.settings.button_alignment }};
  }

  .ai-featured-collection__button-{{ ai_gen_id }} {
    display: inline-block;
    padding: {{ block.settings.button_padding_vertical }}px {{ block.settings.button_padding_horizontal }}px;
    background-color: {{ block.settings.button_background_color }};
    color: {{ block.settings.button_text_color }};
    font-size: {{ block.settings.button_font_size }}px;
    font-weight: {{ block.settings.button_font_weight }};
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    border: {{ block.settings.button_border_width }}px solid {{ block.settings.button_border_color }};
    transition: all 0.3s ease;
    cursor: pointer;
  }

  .ai-featured-collection__button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_background_color }};
    color: {{ block.settings.button_hover_text_color }};
    border-color: {{ block.settings.button_hover_border_color }};
  }

  .ai-featured-collection__empty-state-{{ ai_gen_id }} {
    text-align: center;
    padding: 40px 20px;
    color: #999;
    font-size: 14px;
  }

  @media screen and (max-width: 749px) {
    .ai-featured-collection__products-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.products_per_row_mobile }}, 1fr);
    }

    .ai-featured-collection__title-{{ ai_gen_id }} {
      font-size: {{ block.settings.title_font_size | times: 0.8 }}px;
    }

    .ai-featured-collection__description-{{ ai_gen_id }} {
      font-size: {{ block.settings.description_font_size | times: 0.9 }}px;
    }
  }
{% endstyle %}

<featured-collection-{{ ai_gen_id }}
  class="ai-featured-collection-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-featured-collection__container-{{ ai_gen_id }}">
    {% if block.settings.show_header %}
      <div class="ai-featured-collection__header-{{ ai_gen_id }}">
        {% if block.settings.title != blank %}
          <h2 class="ai-featured-collection__title-{{ ai_gen_id }}">
            {{ block.settings.title }}
          </h2>
        {% endif %}
        {% if block.settings.description != blank %}
          <div class="ai-featured-collection__description-{{ ai_gen_id }}">
            {{ block.settings.description }}
          </div>
        {% endif %}
      </div>
    {% endif %}

    {% if block.settings.collection != blank %}
      <div class="ai-featured-collection__products-{{ ai_gen_id }}">
        {% for product in block.settings.collection.products limit: block.settings.products_to_show %}
          <div class="ai-featured-collection__product-{{ ai_gen_id }}">
            <a href="{{ product.url }}" class="ai-featured-collection__product-image-wrapper-{{ ai_gen_id }}">
              {% if product.featured_image %}
                <img
                  src="{{ product.featured_image | image_url: width: 600 }}"
                  alt="{{ product.featured_image.alt | escape }}"
                  class="ai-featured-collection__product-image-{{ ai_gen_id }}"
                  loading="lazy"
                  width="600"
                  height="600"
                >
              {% else %}
                <div class="ai-featured-collection__product-image-placeholder-{{ ai_gen_id }}">
                  {{ 'product-1' | placeholder_svg_tag }}
                </div>
              {% endif %}
            </a>
            {% if block.settings.show_product_title %}
              <h3 class="ai-featured-collection__product-title-{{ ai_gen_id }}">
                <a href="{{ product.url }}" class="ai-featured-collection__product-title-link-{{ ai_gen_id }}">
                  {{ product.title }}
                </a>
              </h3>
            {% endif %}
            {% if block.settings.show_product_price %}
              <div class="ai-featured-collection__product-price-{{ ai_gen_id }}">
                {{ product.price | money }}
              </div>
            {% endif %}
          </div>
        {% endfor %}
      </div>

      {% if block.settings.show_view_all_button and block.settings.collection.url %}
        <div class="ai-featured-collection__button-wrapper-{{ ai_gen_id }}">
          <a href="{{ block.settings.collection.url }}" class="ai-featured-collection__button-{{ ai_gen_id }}">
            {{ block.settings.button_text }}
          </a>
        </div>
      {% endif %}
    {% else %}
      <div class="ai-featured-collection__empty-state-{{ ai_gen_id }}">
        Next, select a collection to display products
      </div>
    {% endif %}
  </div>
</featured-collection-{{ ai_gen_id }}>

<script>
  (function() {
    class FeaturedCollection{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
      }
    }

    customElements.define('featured-collection-{{ ai_gen_id }}', FeaturedCollection{{ ai_gen_id }});
  })();
</script>

