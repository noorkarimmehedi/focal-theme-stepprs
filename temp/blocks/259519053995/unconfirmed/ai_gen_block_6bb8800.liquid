{% doc %}
  @prompt
    build a featured collection section where there is a visible black squared box and on mobile version there shouldn't be any gap on left and right side same in desktop version too. everyhting should be customizable from font to size to raidius to color 
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-featured-collection-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    padding: 0;
    margin: 0;
  }

  .ai-featured-collection__container-{{ ai_gen_id }} {
    background-color: {{ block.settings.box_background_color }};
    border: {{ block.settings.box_border_width }}px solid {{ block.settings.box_border_color }};
    border-radius: {{ block.settings.box_border_radius }}px;
    padding: {{ block.settings.box_padding }}px;
    width: 100%;
    box-sizing: border-box;
  }

  .ai-featured-collection__header-{{ ai_gen_id }} {
    text-align: {{ block.settings.text_alignment }};
    margin-bottom: {{ block.settings.header_spacing }}px;
  }

  .ai-featured-collection__title-{{ ai_gen_id }} {
    font-family: {{ block.settings.heading_font.family }}, {{ block.settings.heading_font.fallback_families }};
    font-weight: {{ block.settings.heading_font.weight }};
    font-style: {{ block.settings.heading_font.style }};
    font-size: {{ block.settings.heading_size }}px;
    color: {{ block.settings.heading_color }};
    margin: 0 0 {{ block.settings.title_spacing }}px 0;
    line-height: 1.2;
  }

  .ai-featured-collection__description-{{ ai_gen_id }} {
    font-family: {{ block.settings.body_font.family }}, {{ block.settings.body_font.fallback_families }};
    font-weight: {{ block.settings.body_font.weight }};
    font-style: {{ block.settings.body_font.style }};
    font-size: {{ block.settings.description_size }}px;
    color: {{ block.settings.description_color }};
    margin: 0;
    line-height: 1.5;
  }

  .ai-featured-collection__grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat({{ block.settings.products_per_row_desktop }}, 1fr);
    gap: {{ block.settings.grid_gap }}px;
    margin: 0;
  }

  .ai-featured-collection__product-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    text-decoration: none;
    color: inherit;
  }

  .ai-featured-collection__product-image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    padding-bottom: 100%;
    overflow: hidden;
    border-radius: {{ block.settings.product_image_radius }}px;
    background-color: {{ block.settings.product_image_bg }};
    margin-bottom: {{ block.settings.product_info_spacing }}px;
  }

  .ai-featured-collection__product-image-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-featured-collection__product-image-placeholder-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-featured-collection__product-image-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-featured-collection__product-info-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: {{ block.settings.product_text_gap }}px;
  }

  .ai-featured-collection__product-title-{{ ai_gen_id }} {
    font-family: {{ block.settings.product_title_font.family }}, {{ block.settings.product_title_font.fallback_families }};
    font-weight: {{ block.settings.product_title_font.weight }};
    font-style: {{ block.settings.product_title_font.style }};
    font-size: {{ block.settings.product_title_size }}px;
    color: {{ block.settings.product_title_color }};
    margin: 0;
    line-height: 1.3;
  }

  .ai-featured-collection__product-price-{{ ai_gen_id }} {
    font-family: {{ block.settings.body_font.family }}, {{ block.settings.body_font.fallback_families }};
    font-weight: {{ block.settings.body_font.weight }};
    font-style: {{ block.settings.body_font.style }};
    font-size: {{ block.settings.product_price_size }}px;
    color: {{ block.settings.product_price_color }};
    margin: 0;
  }

  .ai-featured-collection__button-wrapper-{{ ai_gen_id }} {
    text-align: {{ block.settings.button_alignment }};
    margin-top: {{ block.settings.button_spacing }}px;
  }

  .ai-featured-collection__button-{{ ai_gen_id }} {
    display: inline-block;
    padding: {{ block.settings.button_padding_vertical }}px {{ block.settings.button_padding_horizontal }}px;
    background-color: {{ block.settings.button_background }};
    color: {{ block.settings.button_text_color }};
    font-family: {{ block.settings.body_font.family }}, {{ block.settings.body_font.fallback_families }};
    font-weight: {{ block.settings.body_font.weight }};
    font-size: {{ block.settings.button_text_size }}px;
    border-radius: {{ block.settings.button_border_radius }}px;
    text-decoration: none;
    border: none;
    cursor: pointer;
    transition: background-color 0.3s ease;
  }

  .ai-featured-collection__button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_background }};
    color: {{ block.settings.button_hover_text_color }};
  }

  .ai-featured-collection__empty-state-{{ ai_gen_id }} {
    text-align: center;
    padding: 40px 20px;
    color: {{ block.settings.description_color }};
    font-family: {{ block.settings.body_font.family }}, {{ block.settings.body_font.fallback_families }};
    font-size: {{ block.settings.description_size }}px;
  }

  @media screen and (max-width: 749px) {
    .ai-featured-collection__grid-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.products_per_row_mobile }}, 1fr);
    }

    .ai-featured-collection__title-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.8 }}px;
    }

    .ai-featured-collection__description-{{ ai_gen_id }} {
      font-size: {{ block.settings.description_size | times: 0.9 }}px;
    }
  }
{% endstyle %}

<featured-collection-{{ ai_gen_id }}
  class="ai-featured-collection-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-featured-collection__container-{{ ai_gen_id }}">
    {% if block.settings.show_header %}
      <div class="ai-featured-collection__header-{{ ai_gen_id }}">
        {% if block.settings.heading != blank %}
          <h2 class="ai-featured-collection__title-{{ ai_gen_id }}">
            {{ block.settings.heading }}
          </h2>
        {% endif %}
        {% if block.settings.description != blank %}
          <div class="ai-featured-collection__description-{{ ai_gen_id }}">
            {{ block.settings.description }}
          </div>
        {% endif %}
      </div>
    {% endif %}

    {% if block.settings.collection != blank %}
      {% assign collection = block.settings.collection %}
      {% assign products_to_show = block.settings.products_count | at_most: collection.products.size %}

      {% if products_to_show > 0 %}
        <div class="ai-featured-collection__grid-{{ ai_gen_id }}">
          {% for product in collection.products limit: products_to_show %}
            <a
              href="{{ product.url }}"
              class="ai-featured-collection__product-{{ ai_gen_id }}"
            >
              <div class="ai-featured-collection__product-image-wrapper-{{ ai_gen_id }}">
                {% if product.featured_image %}
                  <img
                    src="{{ product.featured_image | image_url: width: 600 }}"
                    alt="{{ product.featured_image.alt | escape }}"
                    class="ai-featured-collection__product-image-{{ ai_gen_id }}"
                    loading="lazy"
                    width="600"
                    height="600"
                  >
                {% else %}
                  <div class="ai-featured-collection__product-image-placeholder-{{ ai_gen_id }}">
                    {{ 'product-1' | placeholder_svg_tag }}
                  </div>
                {% endif %}
              </div>
              <div class="ai-featured-collection__product-info-{{ ai_gen_id }}">
                <h3 class="ai-featured-collection__product-title-{{ ai_gen_id }}">
                  {{ product.title }}
                </h3>
                <div class="ai-featured-collection__product-price-{{ ai_gen_id }}">
                  {{ product.price | money }}
                </div>
              </div>
            </a>
          {% endfor %}
        </div>

        {% if block.settings.show_button and block.settings.button_text != blank %}
          <div class="ai-featured-collection__button-wrapper-{{ ai_gen_id }}">
            <a
              href="{{ collection.url }}"
              class="ai-featured-collection__button-{{ ai_gen_id }}"
            >
              {{ block.settings.button_text }}
            </a>
          </div>
        {% endif %}
      {% else %}
        <div class="ai-featured-collection__empty-state-{{ ai_gen_id }}">
          This collection has no products
        </div>
      {% endif %}
    {% else %}
      <div class="ai-featured-collection__empty-state-{{ ai_gen_id }}">
        Select a collection to display products
      </div>
    {% endif %}
  </div>
</featured-collection-{{ ai_gen_id }}>

<script>
  (function() {
    class FeaturedCollection{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
      }
    }

    customElements.define('featured-collection-{{ ai_gen_id }}', FeaturedCollection{{ ai_gen_id }});
  })();
</script>

