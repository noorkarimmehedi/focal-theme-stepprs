{% doc %}
  @prompt
    build a featured collection section where there is a visible black squared box and on mobile version there shouldn't be any gap on left and right side same in desktop version too. everything should be customizable from font to size to radius to color , the product image size should be customizable also product image should fit the full and product name price allingment and size should be customizable 
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-featured-collection-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    padding: 0;
    margin: 0;
  }

  .ai-featured-collection__container-{{ ai_gen_id }} {
    background-color: {{ block.settings.box_background_color }};
    border: {{ block.settings.box_border_width }}px solid {{ block.settings.box_border_color }};
    border-radius: {{ block.settings.box_border_radius }}px;
    padding: {{ block.settings.box_padding }}px;
    margin: 0;
  }

  .ai-featured-collection__header-{{ ai_gen_id }} {
    text-align: {{ block.settings.text_alignment }};
    margin-bottom: {{ block.settings.header_spacing }}px;
  }

  .ai-featured-collection__title-{{ ai_gen_id }} {
    font-family: {{ block.settings.title_font.family }}, {{ block.settings.title_font.fallback_families }};
    font-weight: {{ block.settings.title_font.weight }};
    font-size: {{ block.settings.title_font_size }}px;
    color: {{ block.settings.title_color }};
    margin: 0 0 {{ block.settings.title_spacing }}px;
    text-transform: {{ block.settings.title_text_transform }};
  }

  .ai-featured-collection__description-{{ ai_gen_id }} {
    font-family: {{ block.settings.description_font.family }}, {{ block.settings.description_font.fallback_families }};
    font-weight: {{ block.settings.description_font.weight }};
    font-size: {{ block.settings.description_font_size }}px;
    color: {{ block.settings.description_color }};
    margin: 0;
  }

  .ai-featured-collection__grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat({{ block.settings.columns_desktop }}, 1fr);
    gap: {{ block.settings.grid_gap }}px;
    margin: 0;
  }

  .ai-featured-collection__product-{{ ai_gen_id }} {
    background-color: {{ block.settings.product_card_background }};
    border: {{ block.settings.product_card_border_width }}px solid {{ block.settings.product_card_border_color }};
    border-radius: {{ block.settings.product_card_border_radius }}px;
    padding: {{ block.settings.product_card_padding }}px;
    text-decoration: none;
    display: block;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .ai-featured-collection__product-{{ ai_gen_id }}:hover {
    transform: translateY(-{{ block.settings.hover_lift }}px);
    box-shadow: 0 {{ block.settings.hover_shadow }}px {{ block.settings.hover_shadow | times: 2 }}px rgba(0, 0, 0, 0.1);
  }

  .ai-featured-collection__product-image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    height: {{ block.settings.product_image_height }}px;
    margin-bottom: {{ block.settings.image_spacing }}px;
    overflow: hidden;
    border-radius: {{ block.settings.product_image_border_radius }}px;
  }

  .ai-featured-collection__product-image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    display: block;
    border-radius: {{ block.settings.product_image_border_radius }}px;
    object-fit: {{ block.settings.product_image_fit }};
  }

  .ai-featured-collection__product-image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: {{ block.settings.product_image_border_radius }}px;
  }

  .ai-featured-collection__product-image-placeholder-{{ ai_gen_id }} svg {
    width: 50%;
    height: 50%;
    opacity: 0.3;
  }

  .ai-featured-collection__product-info-{{ ai_gen_id }} {
    text-align: {{ block.settings.product_text_alignment }};
  }

  .ai-featured-collection__product-title-{{ ai_gen_id }} {
    font-family: {{ block.settings.product_title_font.family }}, {{ block.settings.product_title_font.fallback_families }};
    font-weight: {{ block.settings.product_title_font.weight }};
    font-size: {{ block.settings.product_title_font_size }}px;
    color: {{ block.settings.product_title_color }};
    margin: 0 0 {{ block.settings.product_title_spacing }}px;
    text-transform: {{ block.settings.product_title_text_transform }};
  }

  .ai-featured-collection__product-price-{{ ai_gen_id }} {
    font-family: {{ block.settings.product_price_font.family }}, {{ block.settings.product_price_font.fallback_families }};
    font-weight: {{ block.settings.product_price_font.weight }};
    font-size: {{ block.settings.product_price_font_size }}px;
    color: {{ block.settings.product_price_color }};
    margin: 0;
  }

  .ai-featured-collection__empty-state-{{ ai_gen_id }} {
    text-align: center;
    padding: {{ block.settings.box_padding }}px;
    color: #999;
    font-size: 14px;
  }

  @media screen and (max-width: 749px) {
    .ai-featured-collection__grid-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_mobile }}, 1fr);
    }

    .ai-featured-collection__product-image-wrapper-{{ ai_gen_id }} {
      height: {{ block.settings.product_image_height_mobile }}px;
    }

    .ai-featured-collection__title-{{ ai_gen_id }} {
      font-size: {{ block.settings.title_font_size_mobile }}px;
    }

    .ai-featured-collection__description-{{ ai_gen_id }} {
      font-size: {{ block.settings.description_font_size_mobile }}px;
    }

    .ai-featured-collection__product-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.product_title_font_size_mobile }}px;
    }

    .ai-featured-collection__product-price-{{ ai_gen_id }} {
      font-size: {{ block.settings.product_price_font_size_mobile }}px;
    }
  }
{% endstyle %}

<featured-collection-{{ ai_gen_id }}
  class="ai-featured-collection-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-featured-collection__container-{{ ai_gen_id }}">
    {% if block.settings.show_header %}
      <div class="ai-featured-collection__header-{{ ai_gen_id }}">
        {% if block.settings.title != blank %}
          <h2 class="ai-featured-collection__title-{{ ai_gen_id }}">{{ block.settings.title }}</h2>
        {% endif %}
        {% if block.settings.description != blank %}
          <div class="ai-featured-collection__description-{{ ai_gen_id }}">{{ block.settings.description }}</div>
        {% endif %}
      </div>
    {% endif %}

    {% if block.settings.collection != blank %}
      <div class="ai-featured-collection__grid-{{ ai_gen_id }}">
        {% for product in block.settings.collection.products limit: block.settings.products_to_show %}
          <a
            href="{{ product.url }}"
            class="ai-featured-collection__product-{{ ai_gen_id }}"
          >
            <div class="ai-featured-collection__product-image-wrapper-{{ ai_gen_id }}">
              {% if product.featured_image %}
                <img
                  src="{{ product.featured_image | image_url: width: 800 }}"
                  alt="{{ product.featured_image.alt | escape }}"
                  class="ai-featured-collection__product-image-{{ ai_gen_id }}"
                  loading="lazy"
                  width="{{ product.featured_image.width }}"
                  height="{{ product.featured_image.height }}"
                >
              {% else %}
                <div class="ai-featured-collection__product-image-placeholder-{{ ai_gen_id }}">
                  {{ 'product-1' | placeholder_svg_tag }}
                </div>
              {% endif %}
            </div>
            <div class="ai-featured-collection__product-info-{{ ai_gen_id }}">
              <h3 class="ai-featured-collection__product-title-{{ ai_gen_id }}">{{ product.title }}</h3>
              <div class="ai-featured-collection__product-price-{{ ai_gen_id }}">{{ product.price | money }}</div>
            </div>
          </a>
        {% endfor %}
      </div>
    {% else %}
      <div class="ai-featured-collection__empty-state-{{ ai_gen_id }}">
        Next, select a collection to display products
      </div>
    {% endif %}
  </div>
</featured-collection-{{ ai_gen_id }}>

<script>
  (function() {
    class FeaturedCollection{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
      }
    }

    customElements.define('featured-collection-{{ ai_gen_id }}', FeaturedCollection{{ ai_gen_id }});
  })();
</script>

