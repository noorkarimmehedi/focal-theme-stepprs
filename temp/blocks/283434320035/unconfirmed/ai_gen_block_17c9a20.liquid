{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-expand-cards-section-{{ ai_gen_id }} {
    width: 100%;
    min-height: {{ block.settings.section_height }}px;
    background-color: {{ block.settings.background_color }};
    padding: {{ block.settings.section_padding }}px 20px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-expand-cards-container-{{ ai_gen_id }} {
    width: 100%;
    max-width: {{ block.settings.max_width }}px;
    margin: 0 auto;
  }

  .ai-expand-cards-wrapper-{{ ai_gen_id }} {
    display: flex;
    gap: {{ block.settings.card_gap }}px;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    border-radius: {{ block.settings.container_border_radius }}px;
    padding: 20px;
  }

  .ai-expand-card-{{ ai_gen_id }} {
    height: {{ block.settings.card_height }}px;
    border-radius: {{ block.settings.card_border_radius }}px;
    overflow: hidden;
    cursor: pointer;
    transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
    flex-shrink: 0;
  }

  .ai-expand-card-{{ ai_gen_id }}.collapsed {
    width: {{ block.settings.collapsed_width }}px;
  }

  .ai-expand-card-{{ ai_gen_id }}.expanded {
    width: {{ block.settings.expanded_width }}px;
  }

  .ai-expand-card-image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .ai-expand-card-{{ ai_gen_id }}:hover .ai-expand-card-image-{{ ai_gen_id }} {
    transform: scale(1.05);
  }

  .ai-expand-card-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #e5e5e5;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-expand-card-placeholder-{{ ai_gen_id }} svg {
    width: 50%;
    height: 50%;
    opacity: 0.3;
  }

  .ai-expand-card-overlay-{{ ai_gen_id }} {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    background: linear-gradient(to top, rgba(0, 0, 0, 0.8) 0%, transparent 100%);
    padding: 20px;
    opacity: 0;
    transition: opacity 0.5s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .ai-expand-card-{{ ai_gen_id }}.expanded .ai-expand-card-overlay-{{ ai_gen_id }} {
    opacity: 1;
  }

  .ai-expand-card-title-{{ ai_gen_id }} {
    color: #ffffff;
    font-size: {{ block.settings.title_size }}px;
    font-weight: 600;
    margin: 0;
  }

  @media screen and (max-width: 749px) {
    .ai-expand-cards-wrapper-{{ ai_gen_id }} {
      flex-direction: column;
      gap: {{ block.settings.mobile_gap }}px;
    }

    .ai-expand-card-{{ ai_gen_id }}.collapsed {
      width: 100%;
      height: {{ block.settings.mobile_collapsed_height }}px;
    }

    .ai-expand-card-{{ ai_gen_id }}.expanded {
      width: 100%;
      height: {{ block.settings.mobile_expanded_height }}px;
    }
  }
{% endstyle %}

<expand-cards-{{ ai_gen_id }} class="ai-expand-cards-section-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-expand-cards-container-{{ ai_gen_id }}">
    <div class="ai-expand-cards-wrapper-{{ ai_gen_id }}">
      {% for i in (1..6) %}
        {% liquid
          assign image_key = 'card_' | append: i | append: '_image'
          assign title_key = 'card_' | append: i | append: '_title'
          
          assign card_image = block.settings[image_key]
          assign card_title = block.settings[title_key]
        %}

        <div 
          class="ai-expand-card-{{ ai_gen_id }} {% if i == 3 %}expanded{% else %}collapsed{% endif %}"
          data-card-index="{{ i }}"
        >
          {% if card_image %}
            <img
              src="{{ card_image | image_url: width: 800 }}"
              alt="{{ card_image.alt | escape }}"
              loading="lazy"
              width="800"
              height="{{ block.settings.card_height }}"
              class="ai-expand-card-image-{{ ai_gen_id }}"
            >
          {% else %}
            <div class="ai-expand-card-placeholder-{{ ai_gen_id }}">
              {{ 'image' | placeholder_svg_tag }}
            </div>
          {% endif %}
          
          {% if card_title != blank %}
            <div class="ai-expand-card-overlay-{{ ai_gen_id }}">
              <h3 class="ai-expand-card-title-{{ ai_gen_id }}">{{ card_title }}</h3>
            </div>
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>
</expand-cards-{{ ai_gen_id }}>

<script>
  (function() {
    class ExpandCards{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.cards = [];
        this.expandedIndex = 2;
      }

      connectedCallback() {
        this.cards = Array.from(this.querySelectorAll('.ai-expand-card-{{ ai_gen_id }}'));
        this.setupEventListeners();
      }

      setupEventListeners() {
        this.cards.forEach((card, index) => {
          card.addEventListener('mouseenter', () => {
            this.expandCard(index);
          });
        });
      }

      expandCard(index) {
        if (this.expandedIndex === index) return;
        
        this.cards.forEach((card, i) => {
          if (i === index) {
            card.classList.remove('collapsed');
            card.classList.add('expanded');
          } else {
            card.classList.remove('expanded');
            card.classList.add('collapsed');
          }
        });
        
        this.expandedIndex = index;
      }
    }

    customElements.define('expand-cards-{{ ai_gen_id }}', ExpandCards{{ ai_gen_id }});
  })();
</script>

