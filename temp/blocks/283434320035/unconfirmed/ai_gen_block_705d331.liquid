{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-ingredient-section-{{ ai_gen_id }} {
    padding: {{ block.settings.section_padding }}px 20px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-ingredient-container-{{ ai_gen_id }} {
    max-width: 1400px;
    margin: 0 auto;
  }

  .ai-ingredient-header-{{ ai_gen_id }} {
    text-align: center;
    margin-bottom: {{ block.settings.header_spacing }}px;
  }

  .ai-ingredient-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    color: {{ block.settings.title_color }};
    margin: 0 0 12px;
    font-weight: 700;
    letter-spacing: -0.5px;
  }

  .ai-ingredient-subtitle-{{ ai_gen_id }} {
    font-size: {{ block.settings.subtitle_size }}px;
    color: {{ block.settings.subtitle_color }};
    margin: 0;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }

  .ai-ingredient-grid-{{ ai_gen_id }} {
    display: flex;
    gap: {{ block.settings.grid_gap }}px;
    align-items: stretch;
  }

  .ai-ingredient-item-{{ ai_gen_id }} {
    position: relative;
    border-radius: {{ block.settings.border_radius }}px;
    overflow: hidden;
    cursor: pointer;
    flex: 1;
    min-width: 80px;
    transition: flex 0.7s cubic-bezier(0.25, 0.46, 0.45, 0.94);
    background: {{ block.settings.card_background }};
  }

  .ai-ingredient-image-wrapper-{{ ai_gen_id }} {
    width: 100%;
    height: {{ block.settings.card_height }}px;
    position: relative;
    overflow: hidden;
  }

  .ai-ingredient-image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.7s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  }

  .ai-ingredient-image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, #f5f5f5 0%, #e0e0e0 100%);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-ingredient-image-placeholder-{{ ai_gen_id }} svg {
    width: 50%;
    height: 50%;
    opacity: 0.2;
  }

  .ai-ingredient-content-{{ ai_gen_id }} {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    padding: 24px;
    background: linear-gradient(to top, rgba(0, 0, 0, 0.9) 0%, rgba(0, 0, 0, 0.7) 40%, transparent 100%);
    transition: all 0.7s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  }

  .ai-ingredient-name-{{ ai_gen_id }} {
    font-size: {{ block.settings.ingredient_name_size }}px;
    color: #ffffff;
    font-weight: 700;
    margin: 0 0 8px;
    writing-mode: horizontal-tb;
    transition: all 0.7s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  }

  .ai-ingredient-description-{{ ai_gen_id }} {
    font-size: {{ block.settings.ingredient_description_size }}px;
    color: rgba(255, 255, 255, 0.95);
    margin: 0;
    line-height: 1.6;
    opacity: 0;
    transform: translateY(15px);
    transition: all 0.7s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  }

  .ai-ingredient-item-{{ ai_gen_id }}:hover {
    flex: 3;
  }

  .ai-ingredient-item-{{ ai_gen_id }}:hover .ai-ingredient-image-{{ ai_gen_id }} {
    transform: scale(1.08);
  }

  .ai-ingredient-item-{{ ai_gen_id }}:hover .ai-ingredient-content-{{ ai_gen_id }} {
    background: linear-gradient(to top, rgba(0, 0, 0, 0.95) 0%, rgba(0, 0, 0, 0.85) 50%, rgba(0, 0, 0, 0.3) 100%);
    padding: 32px;
  }

  .ai-ingredient-item-{{ ai_gen_id }}:hover .ai-ingredient-name-{{ ai_gen_id }} {
    font-size: calc({{ block.settings.ingredient_name_size }}px * 1.2);
    margin-bottom: 12px;
  }

  .ai-ingredient-item-{{ ai_gen_id }}:hover .ai-ingredient-description-{{ ai_gen_id }} {
    opacity: 1;
    transform: translateY(0);
  }

  @media screen and (max-width: 749px) {
    .ai-ingredient-grid-{{ ai_gen_id }} {
      flex-direction: column;
      gap: {{ block.settings.mobile_gap }}px;
    }

    .ai-ingredient-item-{{ ai_gen_id }} {
      flex: none;
      width: 100%;
    }

    .ai-ingredient-image-wrapper-{{ ai_gen_id }} {
      height: {{ block.settings.mobile_card_height }}px;
    }

    .ai-ingredient-item-{{ ai_gen_id }}:hover .ai-ingredient-name-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.ingredient_name_size }}px * 1.1);
    }
  }
{% endstyle %}

<div class="ai-ingredient-section-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-ingredient-container-{{ ai_gen_id }}">
    {% if block.settings.title != blank or block.settings.subtitle != blank %}
      <div class="ai-ingredient-header-{{ ai_gen_id }}">
        {% if block.settings.title != blank %}
          <h2 class="ai-ingredient-title-{{ ai_gen_id }}">{{ block.settings.title }}</h2>
        {% endif %}
        {% if block.settings.subtitle != blank %}
          <div class="ai-ingredient-subtitle-{{ ai_gen_id }}">{{ block.settings.subtitle }}</div>
        {% endif %}
      </div>
    {% endif %}

    <div class="ai-ingredient-grid-{{ ai_gen_id }}">
      {% for i in (1..6) %}
        {% liquid
          assign image_key = 'ingredient_' | append: i | append: '_image'
          assign name_key = 'ingredient_' | append: i | append: '_name'
          assign description_key = 'ingredient_' | append: i | append: '_description'
          
          assign ingredient_image = block.settings[image_key]
          assign ingredient_name = block.settings[name_key]
          assign ingredient_description = block.settings[description_key]
        %}

        <div class="ai-ingredient-item-{{ ai_gen_id }}">
          <div class="ai-ingredient-image-wrapper-{{ ai_gen_id }}">
            {% if ingredient_image %}
              <img
                src="{{ ingredient_image | image_url: width: 800 }}"
                alt="{{ ingredient_image.alt | escape }}"
                loading="lazy"
                width="800"
                height="{{ block.settings.card_height }}"
                class="ai-ingredient-image-{{ ai_gen_id }}"
              >
            {% else %}
              <div class="ai-ingredient-image-placeholder-{{ ai_gen_id }}">
                {{ 'product-1' | placeholder_svg_tag }}
              </div>
            {% endif %}
            
            <div class="ai-ingredient-content-{{ ai_gen_id }}">
              {% if ingredient_name != blank %}
                <h3 class="ai-ingredient-name-{{ ai_gen_id }}">{{ ingredient_name }}</h3>
              {% endif %}
              
              {% if ingredient_description != blank %}
                <p class="ai-ingredient-description-{{ ai_gen_id }}">{{ ingredient_description }}</p>
              {% endif %}
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

