{% doc %}
  @prompt
    “Create a premium product hero section on a black background with rounded edges. Place a 3D smartphone render on the right and a vertical stack of pill-shaped feature buttons with plus icons on the left. Use soft shadows, modern typography, smooth spacing, and a clean, futuristic tech aesthetic.”
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-hero-section-{{ ai_gen_id }} {
    background-color: {{ block.settings.background_color }};
    border-radius: {{ block.settings.border_radius }}px;
    padding: {{ block.settings.section_padding }}px 20px;
    overflow: hidden;
  }

  .ai-hero-container-{{ ai_gen_id }} {
    max-width: {{ block.settings.max_width }}px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 60px;
    align-items: center;
  }

  .ai-hero-content-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: {{ block.settings.content_spacing }}px;
  }

  .ai-hero-heading-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    font-weight: 700;
    color: {{ block.settings.heading_color }};
    line-height: 1.2;
    margin: 0;
    letter-spacing: -0.02em;
  }

  .ai-hero-description-{{ ai_gen_id }} {
    font-size: {{ block.settings.description_size }}px;
    color: {{ block.settings.description_color }};
    line-height: 1.6;
    margin: 0;
    opacity: 0.9;
  }

  .ai-hero-features-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: {{ block.settings.feature_spacing }}px;
    margin-top: 10px;
  }

  .ai-hero-feature-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: 16px;
    padding: {{ block.settings.feature_padding }}px {{ block.settings.feature_padding | times: 1.5 }}px;
    background-color: {{ block.settings.feature_bg_color }};
    border-radius: {{ block.settings.feature_border_radius }}px;
    cursor: pointer;
    transition: all 0.3s ease;
    box-shadow: {{ block.settings.shadow_x }}px {{ block.settings.shadow_y }}px {{ block.settings.shadow_blur }}px {{ block.settings.shadow_color }};
    border: 1px solid {{ block.settings.feature_border_color }};
  }

  .ai-hero-feature-{{ ai_gen_id }}:hover {
    transform: translateX(8px);
    box-shadow: {{ block.settings.shadow_x | times: 1.5 }}px {{ block.settings.shadow_y | times: 1.5 }}px {{ block.settings.shadow_blur | times: 1.5 }}px {{ block.settings.shadow_color }};
    background-color: {{ block.settings.feature_hover_bg_color }};
  }

  .ai-hero-feature-icon-{{ ai_gen_id }} {
    width: {{ block.settings.icon_size }}px;
    height: {{ block.settings.icon_size }}px;
    flex-shrink: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: {{ block.settings.icon_bg_color }};
    border-radius: 50%;
  }

  .ai-hero-feature-icon-{{ ai_gen_id }} svg {
    width: {{ block.settings.icon_size | times: 0.5 }}px;
    height: {{ block.settings.icon_size | times: 0.5 }}px;
    stroke: {{ block.settings.icon_color }};
    stroke-width: 2.5;
  }

  .ai-hero-feature-text-{{ ai_gen_id }} {
    font-size: {{ block.settings.feature_text_size }}px;
    color: {{ block.settings.feature_text_color }};
    font-weight: 500;
    margin: 0;
  }

  .ai-hero-image-wrapper-{{ ai_gen_id }} {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 40px;
  }

  .ai-hero-image-{{ ai_gen_id }} {
    width: 100%;
    height: auto;
    max-width: 500px;
    display: block;
    filter: drop-shadow({{ block.settings.image_shadow_x }}px {{ block.settings.image_shadow_y }}px {{ block.settings.image_shadow_blur }}px {{ block.settings.image_shadow_color }});
  }

  .ai-hero-image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    max-width: 500px;
    aspect-ratio: 1;
    background: linear-gradient(135deg, {{ block.settings.placeholder_gradient_start }} 0%, {{ block.settings.placeholder_gradient_end }} 100%);
    border-radius: 24px;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    filter: drop-shadow({{ block.settings.image_shadow_x }}px {{ block.settings.image_shadow_y }}px {{ block.settings.image_shadow_blur }}px {{ block.settings.image_shadow_color }});
  }

  .ai-hero-image-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-hero-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 12px 24px;
    background-color: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(10px);
    border-radius: 20px;
    font-size: 14px;
    color: rgba(255, 255, 255, 0.8);
    text-align: center;
    pointer-events: none;
  }

  @media screen and (max-width: 989px) {
    .ai-hero-container-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      gap: 40px;
    }

    .ai-hero-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.7 }}px;
    }

    .ai-hero-description-{{ ai_gen_id }} {
      font-size: {{ block.settings.description_size | times: 0.9 }}px;
    }

    .ai-hero-image-wrapper-{{ ai_gen_id }} {
      order: -1;
      padding: 20px;
    }
  }

  @media screen and (max-width: 749px) {
    .ai-hero-section-{{ ai_gen_id }} {
      padding: {{ block.settings.section_padding | times: 0.6 }}px 16px;
      border-radius: {{ block.settings.border_radius | times: 0.5 }}px;
    }

    .ai-hero-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.6 }}px;
    }

    .ai-hero-feature-{{ ai_gen_id }} {
      padding: {{ block.settings.feature_padding | times: 0.8 }}px {{ block.settings.feature_padding | times: 1.2 }}px;
    }
  }
{% endstyle %}

<div class="ai-hero-section-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-hero-container-{{ ai_gen_id }}">
    <div class="ai-hero-content-{{ ai_gen_id }}">
      {% if block.settings.heading != blank %}
        <h1 class="ai-hero-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h1>
      {% endif %}

      {% if block.settings.description != blank %}
        <div class="ai-hero-description-{{ ai_gen_id }}">{{ block.settings.description }}</div>
      {% endif %}

      <div class="ai-hero-features-{{ ai_gen_id }}">
        {% for i in (1..5) %}
          {% liquid
            assign feature_enabled_key = 'feature_' | append: i | append: '_enabled'
            assign feature_text_key = 'feature_' | append: i | append: '_text'
            assign feature_enabled = block.settings[feature_enabled_key]
            assign feature_text = block.settings[feature_text_key]
          %}

          {% if feature_enabled and feature_text != blank %}
            <div class="ai-hero-feature-{{ ai_gen_id }}">
              <div class="ai-hero-feature-icon-{{ ai_gen_id }}">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke-linecap="round" stroke-linejoin="round">
                  <line x1="12" y1="5" x2="12" y2="19"></line>
                  <line x1="5" y1="12" x2="19" y2="12"></line>
                </svg>
              </div>
              <p class="ai-hero-feature-text-{{ ai_gen_id }}">{{ feature_text }}</p>
            </div>
          {% endif %}
        {% endfor %}
      </div>
    </div>

    <div class="ai-hero-image-wrapper-{{ ai_gen_id }}">
      {% if block.settings.product_image %}
        <img
          src="{{ block.settings.product_image | image_url: width: 1000 }}"
          alt="{{ block.settings.product_image.alt | escape }}"
          loading="lazy"
          width="{{ block.settings.product_image.width }}"
          height="{{ block.settings.product_image.height }}"
          class="ai-hero-image-{{ ai_gen_id }}"
        >
      {% else %}
        <div class="ai-hero-image-placeholder-{{ ai_gen_id }}">
          {{ 'product-1' | placeholder_svg_tag }}
          <div class="ai-hero-empty-state-{{ ai_gen_id }}">
            Add your product image
          </div>
        </div>
      {% endif %}
    </div>
  </div>
</div>

