{% assign ai_gen_id = section.id | replace: '_', '' | downcase %}

{% style %}
  {{ section.settings.text_font | font_face: font_display: 'swap' }}

  .fashion-text-{{ ai_gen_id }} {
    background-color: {{ section.settings.background_color }};
    padding: {{ section.settings.section_padding }}px 20px;
  }

  .fashion-text__container-{{ ai_gen_id }} {
    max-width: {{ section.settings.max_width }}px;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    gap: {{ section.settings.line_spacing }}px;
  }

  .fashion-text__line-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: {{ section.settings.spacing }}px;
    flex-wrap: wrap;
  }

  .fashion-text__text-{{ ai_gen_id }} {
    font-family: {{ section.settings.text_font.family }}, {{ section.settings.text_font.fallback_families }};
    font-weight: {{ section.settings.text_font.weight }};
    font-style: {{ section.settings.text_font.style }};
    font-size: {{ section.settings.font_size }}px;
    color: {{ section.settings.text_color }};
    line-height: 1.2;
    margin: 0;
    white-space: nowrap;
  }

  .fashion-text__box-{{ ai_gen_id }} {
    font-family: {{ section.settings.text_font.family }}, {{ section.settings.text_font.fallback_families }};
    font-weight: {{ section.settings.text_font.weight }};
    font-style: {{ section.settings.text_font.style }};
    font-size: {{ section.settings.font_size }}px;
    color: {{ section.settings.text_color }};
    line-height: 1.2;
    margin: 0;
    padding: {{ section.settings.box_padding_vertical }}px {{ section.settings.box_padding_horizontal }}px;
    border: {{ section.settings.box_border_width }}px solid {{ section.settings.box_border_color }};
    border-radius: {{ section.settings.box_border_radius }}px;
    white-space: nowrap;
  }

  .fashion-text__image-link-{{ ai_gen_id }} {
    display: block;
    text-decoration: none;
    flex-shrink: 0;
    cursor: pointer;
  }

  .fashion-text__image-wrapper-{{ ai_gen_id }} {
    position: relative;
    border-radius: {{ section.settings.border_radius }}px;
    overflow: hidden;
    border: {{ section.settings.border_width }}px solid {{ section.settings.border_color }};
    box-shadow: {{ section.settings.shadow_horizontal }}px {{ section.settings.shadow_vertical }}px {{ section.settings.shadow_blur }}px rgba(0, 0, 0, {{ section.settings.shadow_opacity }});
    transition: border-color 0.3s ease, transform 0.3s ease;
  }

  .fashion-text__image-link-{{ ai_gen_id }}:hover .fashion-text__image-wrapper-{{ ai_gen_id }} {
    border-color: {{ section.settings.hover_border_color }};
    transform: translateY(-2px);
  }

  .fashion-text__image-{{ ai_gen_id }} {
    display: block;
    width: {{ section.settings.image_width }}px;
    height: {{ section.settings.image_height }}px;
    object-fit: cover;
  }

  .fashion-text__placeholder-{{ ai_gen_id }} {
    width: {{ section.settings.image_width }}px;
    height: {{ section.settings.image_height }}px;
    background-color: {{ section.settings.placeholder_color }};
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .fashion-text__placeholder-{{ ai_gen_id }} svg {
    width: 50%;
    height: 50%;
    opacity: 0.3;
  }

  /* Hover Preview Styles */
  .fashion-text__preview-{{ ai_gen_id }} {
    position: fixed;
    pointer-events: none;
    z-index: 9999;
    opacity: 0;
    transform: translateY(10px) scale(0.95);
    transition: opacity {{ section.settings.preview_transition_speed }}s ease, 
                transform {{ section.settings.preview_transition_speed }}s cubic-bezier(0.34, 1.56, 0.64, 1);
    will-change: transform, opacity;
  }

  .fashion-text__preview-{{ ai_gen_id }}.visible {
    opacity: 1;
    transform: translateY(0) scale(1);
  }

  .fashion-text__preview-inner-{{ ai_gen_id }} {
    background: {{ section.settings.preview_background }};
    border-radius: {{ section.settings.preview_border_radius }}px;
    padding: {{ section.settings.preview_padding }}px;
    box-shadow: 0 {{ section.settings.preview_shadow_blur }}px {{ section.settings.preview_shadow_spread }}px rgba(0, 0, 0, {{ section.settings.preview_shadow_opacity }}),
                0 0 0 {{ section.settings.preview_border_width }}px {{ section.settings.preview_border_color }};
    overflow: hidden;
    backdrop-filter: blur(10px);
  }

  .fashion-text__preview-image-{{ ai_gen_id }} {
    width: {{ section.settings.preview_width }}px;
    height: {{ section.settings.preview_height }}px;
    object-fit: cover;
    border-radius: calc({{ section.settings.preview_border_radius }}px - 4px);
    display: block;
  }

  @media screen and (max-width: 749px) {
    .fashion-text__text-{{ ai_gen_id }},
    .fashion-text__box-{{ ai_gen_id }} {
      font-size: {{ section.settings.font_size | times: 0.6 }}px;
    }

    .fashion-text__box-{{ ai_gen_id }} {
      padding: {{ section.settings.box_padding_vertical | times: 0.6 }}px {{ section.settings.box_padding_horizontal | times: 0.6 }}px;
    }

    .fashion-text__image-{{ ai_gen_id }},
    .fashion-text__placeholder-{{ ai_gen_id }} {
      width: {{ section.settings.image_width | times: 0.6 }}px;
      height: {{ section.settings.image_height | times: 0.6 }}px;
    }

    .fashion-text__line-{{ ai_gen_id }} {
      gap: {{ section.settings.spacing | times: 0.6 }}px;
    }

    .fashion-text__container-{{ ai_gen_id }} {
      gap: {{ section.settings.line_spacing | times: 0.6 }}px;
    }

    .fashion-text__preview-image-{{ ai_gen_id }} {
      width: calc({{ section.settings.preview_width }}px * 0.8);
      height: calc({{ section.settings.preview_height }}px * 0.8);
    }

    .fashion-text__preview-inner-{{ ai_gen_id }} {
      padding: calc({{ section.settings.preview_padding }}px * 0.8);
    }
  }
{% endstyle %}

