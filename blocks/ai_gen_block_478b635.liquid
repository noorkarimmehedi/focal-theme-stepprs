{% doc %}
  @prompt
    build a featured collection section where there is a visible black squared box and on mobile version there shouldn't be any gap on left and right side same in desktop version too. everything should be customizable from font to size to radius to color , the product image size should be customizable also product image should fit the full and product name price allingment and size should be customizable , the product image size should be customizable also product image should fit the full and product name price allingment and size should be customizable 
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-featured-collection-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    background-color: {{ block.settings.background_color }};
    padding: {{ block.settings.section_padding_top }}px 0 {{ block.settings.section_padding_bottom }}px;
  }

  .ai-featured-collection-container-{{ ai_gen_id }} {
    width: 100%;
    max-width: 100%;
    margin: 0 auto;
    padding: 0;
  }

  .ai-featured-collection-header-{{ ai_gen_id }} {
    text-align: {{ block.settings.heading_alignment }};
    margin-bottom: {{ block.settings.heading_spacing }}px;
    padding: 0 {{ block.settings.container_padding }}px;
  }

  .ai-featured-collection-title-{{ ai_gen_id }} {
    font-family: {{ block.settings.heading_font.family }}, {{ block.settings.heading_font.fallback_families }};
    font-weight: {{ block.settings.heading_font.weight }};
    font-style: {{ block.settings.heading_font.style }};
    font-size: {{ block.settings.heading_size }}px;
    color: {{ block.settings.heading_color }};
    margin: 0;
    text-transform: {{ block.settings.heading_text_transform }};
  }

  .ai-featured-collection-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat({{ block.settings.products_per_row }}, 1fr);
    gap: {{ block.settings.grid_gap }}px;
    padding: 0 {{ block.settings.container_padding }}px;
  }

  .ai-featured-collection-product-{{ ai_gen_id }} {
    background-color: {{ block.settings.product_card_background }};
    border: {{ block.settings.product_card_border_width }}px solid {{ block.settings.product_card_border_color }};
    border-radius: {{ block.settings.product_card_border_radius }}px;
    padding: {{ block.settings.product_card_padding }}px;
    text-decoration: none;
    display: block;
    transition: transform 0.3s ease;
  }

  .ai-featured-collection-product-{{ ai_gen_id }}:hover {
    transform: translateY(-2px);
  }

  .ai-featured-collection-image-wrapper-{{ ai_gen_id }} {
    width: 100%;
    height: {{ block.settings.image_height }}px;
    margin-bottom: {{ block.settings.image_spacing }}px;
    overflow: hidden;
    border-radius: {{ block.settings.image_border_radius }}px;
  }

  .ai-featured-collection-image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: {{ block.settings.image_fit }};
    display: block;
  }

  .ai-featured-collection-image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-featured-collection-image-placeholder-{{ ai_gen_id }} svg {
    width: 50%;
    height: 50%;
    opacity: 0.3;
  }

  .ai-featured-collection-product-info-{{ ai_gen_id }} {
    text-align: {{ block.settings.product_text_alignment }};
  }

  .ai-featured-collection-product-title-{{ ai_gen_id }} {
    font-family: {{ block.settings.product_title_font.family }}, {{ block.settings.product_title_font.fallback_families }};
    font-weight: {{ block.settings.product_title_font.weight }};
    font-style: {{ block.settings.product_title_font.style }};
    font-size: {{ block.settings.product_title_size }}px;
    color: {{ block.settings.product_title_color }};
    margin: 0 0 {{ block.settings.title_spacing }}px;
    text-transform: {{ block.settings.product_title_text_transform }};
  }

  .ai-featured-collection-product-price-{{ ai_gen_id }} {
    font-family: {{ block.settings.product_price_font.family }}, {{ block.settings.product_price_font.fallback_families }};
    font-weight: {{ block.settings.product_price_font.weight }};
    font-style: {{ block.settings.product_price_font.style }};
    font-size: {{ block.settings.product_price_size }}px;
    color: {{ block.settings.product_price_color }};
    margin: 0;
  }

  .ai-featured-collection-empty-{{ ai_gen_id }} {
    text-align: center;
    padding: 60px 20px;
    color: #999;
    font-size: 16px;
  }

  @media screen and (max-width: 749px) {
    .ai-featured-collection-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size_mobile }}px;
    }

    .ai-featured-collection-grid-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.products_per_row_mobile }}, 1fr);
      gap: {{ block.settings.grid_gap_mobile }}px;
      padding: 0;
    }

    .ai-featured-collection-header-{{ ai_gen_id }} {
      padding: 0 {{ block.settings.container_padding_mobile }}px;
    }

    .ai-featured-collection-image-wrapper-{{ ai_gen_id }} {
      height: {{ block.settings.image_height_mobile }}px;
    }

    .ai-featured-collection-product-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.product_title_size_mobile }}px;
    }

    .ai-featured-collection-product-price-{{ ai_gen_id }} {
      font-size: {{ block.settings.product_price_size_mobile }}px;
    }
  }
{% endstyle %}

<featured-collection-{{ ai_gen_id }} class="ai-featured-collection-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-featured-collection-container-{{ ai_gen_id }}">
    {% if block.settings.heading != blank %}
      <div class="ai-featured-collection-header-{{ ai_gen_id }}">
        <h2 class="ai-featured-collection-title-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
      </div>
    {% endif %}

    {% if block.settings.collection != blank and block.settings.collection.products.size > 0 %}
      <div class="ai-featured-collection-grid-{{ ai_gen_id }}">
        {% for product in block.settings.collection.products limit: block.settings.products_to_show %}
          <a href="{{ product.url }}" class="ai-featured-collection-product-{{ ai_gen_id }}">
            <div class="ai-featured-collection-image-wrapper-{{ ai_gen_id }}">
              {% if product.featured_image %}
                <img
                  src="{{ product.featured_image | image_url: width: 800 }}"
                  alt="{{ product.featured_image.alt | escape }}"
                  class="ai-featured-collection-image-{{ ai_gen_id }}"
                  loading="lazy"
                  width="800"
                  height="800"
                >
              {% else %}
                <div class="ai-featured-collection-image-placeholder-{{ ai_gen_id }}">
                  {{ 'product-1' | placeholder_svg_tag }}
                </div>
              {% endif %}
            </div>
            <div class="ai-featured-collection-product-info-{{ ai_gen_id }}">
              <h3 class="ai-featured-collection-product-title-{{ ai_gen_id }}">{{ product.title }}</h3>
              <div class="ai-featured-collection-product-price-{{ ai_gen_id }}">{{ product.price | money }}</div>
            </div>
          </a>
        {% endfor %}
      </div>
    {% else %}
      <div class="ai-featured-collection-empty-{{ ai_gen_id }}">
        Select a collection to display products
      </div>
    {% endif %}
  </div>
</featured-collection-{{ ai_gen_id }}>

<script>
  (function() {
    class FeaturedCollection{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
      }
    }

    customElements.define('featured-collection-{{ ai_gen_id }}', FeaturedCollection{{ ai_gen_id }});
  })();
</script>

